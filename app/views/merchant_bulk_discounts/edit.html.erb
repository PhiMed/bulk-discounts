<h1>Edit Bulk Discount</h1>
<%= link_to "Welcome Page", "/" %>
<hr>

<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :percentage_discount %>
  <%= f.number_field :percentage_discount, value: @bulk_discount.percentage_discount, required: true  %>
  <br>
  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold, value: @bulk_discount.quantity_threshold, size: 75, required: true %>
  <br>
  <%= f.submit %>
<% end %>
